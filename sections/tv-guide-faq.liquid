<div class="page-width">
  <div class="tv-guide-content">
    <section class="tv-guide-section">
      <h2 class="tv-guide-section__title">{{ section.settings.title }}</h2>

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'faq_item' -%}
            <div class="tv-guide-faq-item">
              <div class="tv-guide-faq-question">
                {{ block.settings.question }}
                <span>+</span>
              </div>
              <div class="tv-guide-faq-answer">
                {{ block.settings.answer }}
              </div>
            </div>

          {%- when 'conclusion' -%}
            <h2 class="tv-guide-section__title" style="margin-top: 60px;">{{ block.settings.conclusion_title }}</h2>

            {%- if block.settings.conclusion_intro != blank -%}
              <p style="font-size: 1.1em; line-height: 1.8;">
                {{ block.settings.conclusion_intro }}
              </p>
            {%- endif -%}

            {%- if block.settings.show_highlights -%}
              <div class="tv-guide-conclusion-box">
                <h3>{{ block.settings.highlights_title }}</h3>
                <ul>
                  {%- assign highlights = block.settings.highlights | newline_to_br | split: '<br />' -%}
                  {%- for highlight in highlights -%}
                    {%- if highlight != blank -%}
                      <li>{{ highlight }}</li>
                    {%- endif -%}
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}

            {%- if block.settings.show_final_note -%}
              <div class="tv-guide-alert tv-guide-alert--success">
                <strong>{{ block.settings.final_note_title }}</strong> {{ block.settings.final_note_text }}
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </section>
  </div>
</div>

