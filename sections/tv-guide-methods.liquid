<div class="page-width">
  <div class="tv-guide-content tv-guide-section">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'method' -%}
          <section id="{{ block.settings.section_id }}" class="tv-guide-section">
            <h2 class="tv-guide-section__title">{{ block.settings.method_title }}</h2>

            <div class="tv-guide-method-card">
              <h3>{{ block.settings.card_title }}</h3>
              <p><strong>{{ block.settings.label_advantages }}:</strong> {{ block.settings.advantages }}</p>
              {%- if block.settings.cost != blank -%}
                <p><strong>{{ block.settings.label_cost }}:</strong> {{ block.settings.cost }}</p>
              {%- endif -%}
              {%- if block.settings.important_note != blank -%}
                <p><strong>{{ block.settings.label_important }}:</strong> {{ block.settings.important_note }}</p>
              {%- endif -%}
            </div>

            {%- if block.settings.show_warning and block.settings.warning_text != blank -%}
              <div class="tv-guide-alert tv-guide-alert--warning">
                <strong>{{ block.settings.warning_title }}</strong> {{ block.settings.warning_text }}
              </div>
            {%- endif -%}

            {%- if block.settings.requirements != blank -%}
              <h3 class="tv-guide-section__subtitle">{{ block.settings.requirements_title }}</h3>
              <div style="margin-left: 20px; margin-bottom: 25px;">
                {{ block.settings.requirements }}
              </div>
            {%- endif -%}

            {%- if block.settings.steps != blank -%}
              <h3 class="tv-guide-section__subtitle">{{ block.settings.steps_title }}</h3>
              <ol class="tv-guide-steps">
                {%- assign step_lines = block.settings.steps | newline_to_br | split: '<br />' -%}
                {%- for step in step_lines -%}
                  {%- if step != blank -%}
                    <li>{{ step }}</li>
                  {%- endif -%}
                {%- endfor -%}
              </ol>
            {%- endif -%}

            {%- if block.settings.show_success_note and block.settings.success_text != blank -%}
              <div class="tv-guide-alert tv-guide-alert--success">
                <strong>{{ block.settings.success_title }}</strong> {{ block.settings.success_text }}
              </div>
            {%- endif -%}

            {%- if block.settings.show_info_note and block.settings.info_text != blank -%}
              <div class="tv-guide-alert tv-guide-alert--info">
                <strong>{{ block.settings.info_title }}</strong> {{ block.settings.info_text }}
              </div>
            {%- endif -%}
          </section>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

