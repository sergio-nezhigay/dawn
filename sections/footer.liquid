<section class="bg-[#145374] text-white/90 py-8" itemscope itemtype="http://schema.org/LocalBusiness">
  <ul class="page-width block gap-8 px-4 space-y-6 max-w-7xl">
    <li class="flex space-x-4">
      <div class="flex-shrink-0 size-12">
        <span class="svg-wrapper hover:scale-105">
          {{- 'icon-phone.svg' | inline_asset_content -}}
        </span>
      </div>
      <div class="flex flex-col">
        <span class="">{{ 'sections.footer.phone_label' | t }}</span>
        <a href="tel:+380993815288" class="hover:underline underline-offset-4 " itemprop="telephone">
          (099) 381-5288
        </a>
      </div>
    </li>

    <li class="flex space-x-4">
      <div class="flex-shrink-0 size-12">
        <span class="svg-wrapper hover:scale-105">
          {{- 'icon-clock.svg' | inline_asset_content -}}
        </span>
      </div>
      <div class="flex flex-col">
        <span>{{ 'sections.footer.working_hours_label' | t }}</span>
        <span>{{ 'sections.footer.working_hours_value' | t }}</span>
      </div>
    </li>

    <li class="flex space-x-4">
      <div class="flex-shrink-0 size-12">
        <span class="svg-wrapper hover:scale-105">
          {{- 'icon-email.svg' | inline_asset_content -}}
        </span>
      </div>
      <div class="flex flex-col">
        <span>{{ 'sections.footer.email_label' | t }}</span>
        <a
          href="mailto:info@informatica.com.ua"
          class="hover:underline underline-offset-4 "
          itemprop="email"
        >
          info@informatica.com.ua
        </a>
      </div>
    </li>

    <li class="flex space-x-4">
      <div class="flex-shrink-0 size-12">
        <span class="svg-wrapper hover:scale-105">
          {{- 'icon-map-pin.svg' | inline_asset_content -}}
        </span>
      </div>
      <div class="flex flex-col" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
        <span>{{ 'sections.footer.address_label' | t }}</span>
        <span>
          <span itemprop="streetAddress">{{ 'sections.footer.address_street' | t }}</span>,
          <span itemprop="addressLocality">{{ 'sections.footer.address_city' | t }}</span>,
          <span itemprop="addressCountry">{{ 'sections.footer.address_country' | t }}</span>
        </span>
      </div>
    </li>
  </ul>

  <p class="text-center border-t border-white/20 pt-8 mt-8">
