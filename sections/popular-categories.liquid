{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .popular-categories__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .popular-categories__image-wrapper {
    width: 100%;
    position: relative;
    margin-bottom: 1.5rem;
  }

  /* Match .card-walmart styles for the container */
  .popular-categories__item {
    background-color: white !important;
    border: 1px solid #e5e7eb !important;
    border-radius: 12px !important;
    padding: 20px 10px !important; /* Increased top/bottom padding to match the taller appearance */
    transition: transform 300ms ease, box-shadow 300ms ease, border-color 300ms ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .popular-categories__item:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    transform: translateY(-0.25rem);
    border-color: #bfdbfe !important;
  }

  .popular-categories__item:active {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }

  .popular-categories__image-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    position: relative;
    background-color: #f3f4f6;
  }

  .popular-categories__image-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .popular-categories__title {
    font-family: 'Chakra Petch', 'Tektur', sans-serif;
    font-weight: 700;
    font-size: 1.4rem;
    text-transform: uppercase;
    color: #111827;
    margin: 1rem 0 0.4rem;
    line-height: 1.2;
    letter-spacing: 0.05em;
  }

  .popular-categories__count {
    font-size: 1.1rem;
    color: #9ca3af;
    text-transform: uppercase;
    font-weight: 600;
  }

  .popular-categories .grid {
    column-gap: 1.5rem;
    row-gap: 1.5rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="section-title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <ul
      class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down list-unstyled popular-categories"
      role="list"
    >
      {%- for block in section.blocks -%}
        <li class="grid__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.collection.url }}" class="popular-categories__card">
            <div class="popular-categories__item w-full">
              <div class="popular-categories__image-circle">
                {%- if block.settings.collection.featured_image != blank -%}
                  {{
                    block.settings.collection.featured_image
                    | image_url: width: 240
                    | image_tag: loading: 'lazy', alt: block.settings.collection.title
                  }}
                {%- else -%}
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <h3 class="popular-categories__title">
                {{ block.settings.collection.title | default: 'Collection' }}
              </h3>
              <div class="popular-categories__count">
                {{ block.settings.collection.all_products_count }}
                {{ 'ТОВАРІВ' }}
              </div>
            </div>
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Popular Categories",
  "tag": "section",
  "class": "section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Popular categories",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 6,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.collection-list.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.collection-list.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "2",
      "label": "t:sections.collection-list.settings.columns_mobile.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Popular Categories",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
