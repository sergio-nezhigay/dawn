<div class="page-width">
  <div class="tv-guide-content">
    <section id="products" class="tv-guide-section">
      <h2 class="tv-guide-section__title">{{ section.settings.title }}</h2>

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            <div class="tv-guide-product-card">
              <h3>{{ block.settings.product_title }}</h3>

              {%- if block.settings.show_rating -%}
                <div class="tv-guide-rating">
                  {{ block.settings.rating }} ({{ block.settings.reviews_count }})
                </div>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p style="margin: 15px 0;">{{ block.settings.description }}</p>
              {%- endif -%}

              {%- if block.settings.feature_1 != blank -%}
                <p><strong>{{ block.settings.feature_1_label }}:</strong> {{ block.settings.feature_1 }}</p>
              {%- endif -%}

              {%- if block.settings.feature_2 != blank -%}
                <p><strong>{{ block.settings.feature_2_label }}:</strong> {{ block.settings.feature_2 }}</p>
              {%- endif -%}

              <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px;">
                <span class="tv-guide-product-price">{{ block.settings.price }}</span>
                {%- if block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="tv-guide-product-btn" target="_blank">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            </div>

          {%- when 'note' -%}
            <div class="tv-guide-alert tv-guide-alert--{{ block.settings.note_type }}">
              <strong>{{ block.settings.note_title }}</strong> {{ block.settings.note_text }}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </section>
  </div>
</div>

