{{ 'section-tv-guide.css' | asset_url | stylesheet_tag }}
<script src="{{ 'tv-guide.js' | asset_url }}" defer="defer"></script>

<div class="tv-guide-hero">
  <div class="tv-guide-hero__content">
    <h1 class="tv-guide-hero__title">{{ section.settings.title }}</h1>
    <p class="tv-guide-hero__subtitle">{{ section.settings.subtitle }}</p>
  </div>
</div>

<div class="page-width">
  {%- if section.settings.show_quick_nav -%}
    <div class="tv-guide-quick-nav">
      <h3 class="tv-guide-quick-nav__title">{{ section.settings.quick_nav_title }}</h3>
      <div class="tv-guide-nav-grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'nav_item' -%}
              <a href="{{ block.settings.link }}" class="tv-guide-nav-item">
                {{ block.settings.text }}
              </a>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

