<div class="page-width">
  <div class="tv-guide-content">
    <section id="ports" class="tv-guide-section">
      <h2 class="tv-guide-section__title">{{ section.settings.title }}</h2>

      {%- if section.settings.show_alert -%}
        <div class="tv-guide-alert tv-guide-alert--info">
          <strong>{{ section.settings.alert_title }}</strong> {{ section.settings.alert_text }}
        </div>
      {%- endif -%}

      <div class="tv-guide-interactive-selector">
        <h3>{{ section.settings.selector_title }}</h3>
        <p>{{ section.settings.selector_description }}</p>

        <div class="tv-guide-selector-buttons">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'port_button' -%}
                <button class="tv-guide-selector-btn" data-port="{{ block.settings.port_type }}">
                  {{ block.settings.button_text }}
                </button>
            {%- endcase -%}
          {%- endfor -%}
        </div>

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'port_result' -%}
              <div id="tv-guide-result-{{ block.settings.port_type }}" class="tv-guide-result-box">
                <h4>{{ block.settings.result_title }}</h4>
                <p><strong>{{ block.settings.label_required }}:</strong> {{ block.settings.required_text }}</p>
                <p><strong>{{ block.settings.label_quality }}:</strong> {{ block.settings.quality_text }}</p>
                {%- if block.settings.complexity_text != blank -%}
                  <p><strong>{{ block.settings.label_complexity }}:</strong> {{ block.settings.complexity_text }}</p>
                {%- endif -%}
                {%- if block.settings.note_text != blank -%}
                  <p><strong>{{ block.settings.label_note }}:</strong> {{ block.settings.note_text }}</p>
                {%- endif -%}
                {%- if block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="tv-guide-product-btn">{{ block.settings.button_text }}</a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_port_visual -%}
        <div class="tv-guide-port-visual">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'port_visual' -%}
                <div class="tv-guide-port-item">
                  <div class="tv-guide-port-icon {{ block.settings.icon_class }}">
                    {{ block.settings.port_name }}
                  </div>
                  <strong>{{ block.settings.port_full_name }}</strong>
                  <p style="font-size: 0.9em; color: #666; margin-top: 10px;">
                    {{ block.settings.years }}<br>
                    {{ block.settings.signal_type }}<br>
                    {{ block.settings.capabilities }}
                  </p>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </section>
  </div>
</div>

