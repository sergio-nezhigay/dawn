{{ 'section-main-policy.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="shopify-policy__container section-{{ section.id }}-padding">
    <div class="shopify-policy__title">
      <h1 class="section-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {%- if policy.title != blank -%}
          {{ policy.title }}
        {%- else -%}
          {{ page_title }}
        {%- endif -%}
      </h1>
    </div>

    {%- if request.path contains 'shipping-policy'
      or request.path contains 'shipping_policy'
      or page_title contains 'доставк'
      or page_title contains 'Доставк'
      or policy.title contains 'доставк'
      or policy.title contains 'Доставк'
    -%}
      <div class="policy-cards-grid">
        {%- comment -%} Shipping Methods Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-truck.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.shipping_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.nova_posta_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.nova_posta_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.courier_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.courier_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.self_pickup_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.self_pickup_desc' | t }}</span
                >
              </div>
            </div>
          </div>
        </div>

        {%- comment -%} Payment Methods Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-credit-card.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.payment_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title"
                  >{{ 'sections.main_policy.bank_card_title' | t }}</span
                >
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.bank_card_desc' | t }}</span
                >
              </div>
            </div>
          </div>
          <div class="policy-card__footer">
            {{ 'sections.main_policy.cash_on_delivery' | t }}
          </div>
        </div>
      </div>
    {%- elsif request.path contains 'refund-policy'
      or request.path contains 'refund_policy'
      or page_title contains 'повернення'
      or page_title contains 'Повернення'
      or policy.title contains 'повернення'
      or policy.title contains 'Повернення'
      or page_title contains 'возврат'
      or page_title contains 'Возврат'
      or policy.title contains 'возврат'
      or policy.title contains 'Возврат'
    -%}
      <div class="policy-cards-grid">
        {%- comment -%} Return Conditions Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-return.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.conditions_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.return_period_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.return_period_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.product_condition_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.product_condition_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.documents_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.documents_desc' | t }}</span
                >
              </div>
            </div>
          </div>
        </div>

        {%- comment -%} Return Process Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-truck.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.process_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.return_nova_posta_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.return_nova_posta_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.return_self_pickup_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.return_self_pickup_desc' | t }}</span
                >
              </div>
            </div>
          </div>
        </div>

        {%- comment -%} Refund Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-credit-card.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.refund_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.payment_method_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.payment_method_desc' | t }}</span
                >
              </div>
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.payment_period_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.payment_period_desc' | t }}</span
                >
              </div>
            </div>
          </div>
        </div>

        {%- comment -%} Exceptions Card {%- endcomment -%}
        <div class="policy-card">
          <div class="policy-card__header">
            {% render 'icon-with-wrapper', icon_name: 'icon-info.svg' %}
            <h2 class="policy-card__title">{{ 'sections.main_policy.exceptions_title' | t }}</h2>
          </div>
          <div class="policy-card__content">
            <div class="policy-card__list">
              <div class="policy-card__item">
                <span class="policy-card__item-title">{{ 'sections.main_policy.non_returnable_title' | t }}</span>
                <span class="policy-card__item-desc"
                  >{{ 'sections.main_policy.non_returnable_desc' | t }}</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- else -%}
      <div class="shopify-policy__body rte">
        {{ policy.body }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Main Policy",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
