<section id="{{ section.id }}" class="trust-ticker-section {{ section.settings.custom_classes }}">
  <div class="trust-ticker-wrapper">
    <div class="trust-ticker-container">
      <div class="trust-ticker-track">
        {% for block in section.blocks %}
          <div class="trust-ticker-item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="trust-ticker-icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            <div class="trust-ticker-content">
              {% if block.settings.title != blank %}
                <h3 class="trust-ticker-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="trust-ticker-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
        {% for block in section.blocks %}
          <div class="trust-ticker-item">
            {% if block.settings.icon != blank %}
              <div class="trust-ticker-icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            <div class="trust-ticker-content">
              {% if block.settings.title != blank %}
                <h3 class="trust-ticker-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="trust-ticker-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #{{ section.id }} {
    --section-bg: {{ section.settings.background_color }};
    --section-max-width: {{ section.settings.max_width }}px;
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --section-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --section-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --title-color: {{ section.settings.title_color }};
    --description-color: {{ section.settings.description_color }};
    --title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --description-size-mobile: {{ section.settings.description_size_mobile }}px;
    --description-size-desktop: {{ section.settings.description_size_desktop }}px;
    --animation-speed: {{ section.settings.animation_speed }}s;
    --border-top: {{ section.settings.border_top_width }}px solid {{ section.settings.border_top_color }};
    --border-bottom: {{ section.settings.border_bottom_width }}px solid {{ section.settings.border_bottom_color }};
  }

  #{{ section.id }}.trust-ticker-section {
    background: var(--section-bg);
    padding-top: var(--section-padding-top-mobile);
    padding-bottom: var(--section-padding-bottom-mobile);
    border-top: var(--border-top);
    border-bottom: var(--border-bottom);
    overflow: hidden;
  }

  #{{ section.id }} .trust-ticker-wrapper {
    max-width: var(--section-max-width);
    margin: 0 auto;
    width: 100%;
  }

  #{{ section.id }} .trust-ticker-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }

  #{{ section.id }} .trust-ticker-track {
    display: inline-flex;
    animation: scroll var(--animation-speed) linear infinite;
    align-items: center;
    gap: 60px;
  }

  #{{ section.id }} .trust-ticker-item {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  #{{ section.id }} .trust-ticker-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  #{{ section.id }} .trust-ticker-icon svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  #{{ section.id }} .trust-ticker-content {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  #{{ section.id }} .trust-ticker-title {
    font-size: var(--title-size-mobile);
    font-weight: 600;
    color: var(--title-color);
    margin: 0;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #{{ section.id }} .trust-ticker-description {
    font-size: var(--description-size-mobile);
    color: var(--description-color);
    margin: 0;
    line-height: 1.3;
    font-weight: 400;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (min-width: 768px) {
    #{{ section.id }}.trust-ticker-section {
      padding-top: var(--section-padding-top-desktop);
      padding-bottom: var(--section-padding-bottom-desktop);
    }

    #{{ section.id }} .trust-ticker-title {
      font-size: var(--title-size-desktop);
    }

    #{{ section.id }} .trust-ticker-description {
      font-size: var(--description-size-desktop);
    }

    #{{ section.id }} .trust-ticker-track {
      gap: 80px;
    }

    #{{ section.id }} .trust-ticker-item {
      gap: 16px;
    }

    #{{ section.id }} .trust-ticker-icon {
      width: 28px;
      height: 28px;
    }
  }

  .trust-ticker-section {
    position: relative;
  }

  .trust-ticker-wrapper {
    position: relative;
  }

  .trust-ticker-container {
    position: relative;
  }

  .trust-ticker-track:hover {
    animation-play-state: paused;
  }
</style>

