<div class="space-y-4">
  {% assign warranty_months = product.metafields.custom.warranty_months %}
  {% if warranty_months %}
    <div class="flex items-start gap-3">
      <span class="svg-wrapper">
        {{- 'icon-shield-check.svg' | inline_asset_content -}}
      </span>
      <div>
        <div class="font-semibold">{{ 'product.features.warranty' | t }}</div>
        <div class="text-sm text-gray-500">
          {{ warranty_months }}
          {{ 'product.features.months' | t }}. {{ 'product.features.return_exchange' | t }}
        </div>
      </div>
    </div>
  {% endif %}

  <div class="flex items-start gap-3">
    <span class="svg-wrapper">
      {{- 'icon-truck.svg' | inline_asset_content -}}
    </span>
    <div>
      <div class="font-semibold">{{ 'product.features.delivery' | t }}</div>
      <div class="text-sm text-gray-500">{{ 'product.features.delivery_info' | t }}</div>
    </div>
  </div>

  <div class="flex items-start gap-3">
    <span class="svg-wrapper">
      {{- 'icon-credit-card.svg' | inline_asset_content -}}
    </span>
    <div>
      <div class="font-semibold">{{ 'product.features.payment' | t }}</div>
      <div class="text-sm text-gray-500">{{ 'product.features.payment_info' | t }}</div>
    </div>
  </div>

  <div class="flex items-start gap-3">
    <span class="svg-wrapper">
      {{- 'icon-gift.svg' | inline_asset_content -}}
    </span>
    <div>
      <div class="font-semibold">{{ 'product.features.bonus' | t }}</div>
      <div class="text-sm text-gray-500">{{ 'product.features.bonus_info' | t }}</div>
    </div>
  </div>
</div>
